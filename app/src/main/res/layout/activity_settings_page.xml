<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsPage">

    <TextView
        android:id="@+id/text_who_we_are"
        android:layout_width="180dp"
        android:layout_height="85dp"
        android:layout_marginTop="96dp"
        android:background="?attr/colorSecondary"
        android:gravity="center"
        android:text="@string/who_we_are"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_other_apps"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/text_other_apps"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:background="?attr/colorSecondary"
        android:gravity="center"
        android:text="@string/our_other_apps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_reference_article" />

    <TextView
        android:id="@+id/text_reference_article"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="76dp"
        android:background="?attr/colorSecondary"
        android:gravity="center"
        android:text="@string/reference_article"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/languageSpinner" />

    <ImageView
        android:id="@+id/spinnerBackground"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:elevation="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/spinner_background"
        app:layout_constraintBottom_toTopOf="@+id/text_reference_article"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/languageSpinner"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
